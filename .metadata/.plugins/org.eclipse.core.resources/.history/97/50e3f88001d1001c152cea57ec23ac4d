package com.example.demo.app;



import javax.validation.constraints.Email;
import javax.validation.constraints.NotNull;
import javax.validation.constraints.Size;

public class LoginForm{

	public LoginForm() {}

    public LoginForm(String id, String name) {
		super();
		this.id = id;
		this.name = name;
	}



    //演習1-1-2 id,name,email,contentsのコンストラクタを追加する
    public LoginForm(String id, String name,String email, String contents) {
		super();
		this.id = id;
		this.name = name;
	}


	@NotNull
    private String id;
	
	@Size(min = 1, max = 20, message="Please input 20 characters or less")
	@NotNull
    private String name;

	
	public String getId() {
		return id;
	}

	public void setId(String id) {
		this.id = id;
	}
	
	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}




}