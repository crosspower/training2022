package com.example.demo.app;

import java.util.Map;

import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;

import com.example.demo.app.inquiry.LoginForm;

@Controller
@RequestMapping("/AttendanceManagement")
public class AttendanceManagementController {
	private final JdbcTemplate jdbcTemplate;
	public AttendanceManagementController(JdbcTemplate jdbcTemplate) {
		this.jdbcTemplate = jdbcTemplate;
	}
	
	@GetMapping("/timestamp")
	public String timestamp(Model model) {
		String sql = "SELECT id, name "
				+ "FROM member WHERE id = 'admin'";
		Map<String, Object> map = jdbcTemplate.queryForMap(sql);
		
		model.addAttribute("id", map.get("id"));
		model.addAttribute("name", map.get("name"));
		model.addAttribute("title", "Timestamp");
		return "timestamp";
	}
	
	@GetMapping("/login")
	public String login(LoginForm loginForm, Model model) {
		model.addAttribute("title", "Login");
		return "login";
	}
	
	@PostMapping("/confirm")
	public String confirm(@Validated LoginForm loginForm,
	        BindingResult result,
	        Model model) {

		if(result.hasErrors()) {
			model.addAttribute("title", "Login");
			return "/login";
		}
		model.addAttribute("title", "Timestamp");
		return "timestamp";
	}
}
